<main class="col-md-8 ms-sm-auto col-lg-10 px-md-4">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-5">
                        <h2><%= title %></h2>
                    </div>
                    <div class="col-sm-7">
                        <a href="#" class="btn btn-secondary"><i class="material-icons">&#xE147;</i> <span>Nuevo cliente</span></a>
                        <form id="filterForm" class="d-inline">
                            <input type="text" name="descripcion" id="descripcion" placeholder="Buscar por servicio" class="form-control d-inline" style="width: auto; display: inline-block;">
                            <button type="submit" class="btn btn-secondary"><i class="material-icons">&#xE8B6;</i> <span>Filtrar</span></button>
                        </form>
                    </div>
                </div>
            </div>

            <table id="clientesTable" class="table table-striped table-hover" style="width:100%">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Servicio</th>
                        <th>Acci√≥n</th>
                    </tr>
                </thead>
                <tbody>
                    <% arrClientes.forEach((cliente) => { %>
                        <tr>
                            <td><%= cliente.id %></td>
                            <td><%= cliente.nombre %></td>   
                            <td><%= cliente.apellido %></td>
                            <td>
                              <% cliente.servicios.forEach(servicio => { %>
                                <%= servicio.descripcion %><br>
                              <% }); %>
                            </td>
                            <td>
                                <a href="/clientes/findAllById/<%= cliente.id %>/view" class="search" title="Search" data-toggle="tooltip"><i class="material-icons">&#xE8B6;</i></a>
                                <a href="#" class="delete" title="Delete" data-toggle="tooltip"><i class="material-icons">&#xE5C9;</i></a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
                
            <div class="clearfix">
                <div class="hint-text">Showing <b>5</b> out of <b>25</b></div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item"><a href="#" class="page-link">1</a></li>
                    <li class="page-item"><a href="#" class="page-link">2</a></li>
                    <li class="page-item active"><a href="#" class="page-link">3</a></li>
                    <li class="page-item"><a href="#" class="page-link">4</a></li>
                    <li class="page-item"><a href="#" class="page-link">5</a></li>
                    <li class="page-item"><a href="#" class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
</main>